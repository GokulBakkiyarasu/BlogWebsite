<%- include("partials/header.ejs") %>

<div class="blog-form">
    <h1>New Post</h1><hr>
    <form method="POST" action="/submit">
        <label for="postName">Blog Name: </label>
        <input type="text" name="postName" placeholder="Heading of the post" required>
        <label for="description">Description: </label>
        <input type="text" name="description" placeholder="Description for your post" required>
        <label for="imgUrl">Image URL: </label>
        <input type="url" name="imgUrl" placeholder="Post's image URL" required>
        <label for="detail">Write About Your Post: </label>
        <textarea name="detail" cols="20" rows="6" required></textarea>
        <button>Submit</button>
    </form>
</div>

